<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/gradient"
                                                   tools:context=".pages.play.SumScoreActivity">

    <TextView
        android:id="@+id/Chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="Chapter 1 : Starting Conversations" android:textAlignment="center"
        android:textColor="#FFFFFF" android:textSize="28sp"
        android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/NewCoin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="288dp" android:layout_marginEnd="146dp"
        android:drawableLeft="@drawable/coin" android:gravity="center_vertical"
        android:text="NewCoin"
        android:textColor="#FFFFFF" android:textSize="20sp"
        android:textStyle="normal" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/Correct"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="200dp" android:layout_marginEnd="68dp"
        android:text="Correct : " android:textAlignment="center"
        android:textColor="#FFFFFF" android:textSize="21sp"
        android:textStyle="normal|bold" app:layout_constraintBottom_toTopOf="@+id/SumScore"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>
    <TextView
        android:id="@+id/SumScore"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="87dp"
        android:text="Score : " android:textAlignment="center"
        android:textColor="#FFFFFF" android:textSize="21sp"
        android:textStyle="normal|bold" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp" android:layout_marginTop="332dp"
        android:layout_marginEnd="131dp" android:text="@string/IncorrectWords"
        android:textColor="#FFFFFF" android:textSize="20sp"
        android:textStyle="normal|bold" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="55dp" android:orientation="vertical"
        android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/incorrectWordRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/ContinueBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp" android:layout_marginTop="590dp"
        android:layout_marginEnd="107dp" android:background="@drawable/choice_button"
        android:drawableBottom="@drawable/choice_button" android:paddingLeft="20sp"
        android:paddingRight="20sp" android:text="@string/Continue"
        android:textColor="#FFFFFF" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>